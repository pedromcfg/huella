<section class="huella-section huella-section-alt">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="huella-title">A Nossa Equipa</h2>
                <p class="huella-text">Conheça as pessoas por trás dos deliciosos cookies da Huella</p>
            </div>
        </div>
        <div class="row">
            ${team.map(member => `
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card huella-card h-100 text-center">
                    <img src="${member.image}" class="card-img-top" alt="${member.name}" style="height: 300px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">${member.name}</h5>
                        <p class="text-huella-orange fw-bold">${member.role}</p>
                        <p class="card-text">${member.description}</p>
                    </div>
                </div>
            </div>
            `).join('')}
        </div>
    </div>
</section>

