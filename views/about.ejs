<section class="huella-section huella-section-green">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="text-white">Os Nossos Valores</h2>
                <p class="text-white-50">Princípios que guiam tudo o que fazemos</p>
            </div>
        </div>
        <div class="row">
            ${values.map(value => `
            <div class="col-lg-3 col-md-6 mb-4">
                <div class="text-center text-white">
                    <div class="mb-3">
                        <i class="fas fa-star fa-3x text-huella-yellow"></i>
                    </div>
                    <h5>${value.title}</h5>
                    <p class="text-white-50">${value.description}</p>
                </div>
            </div>
            `).join('')}
        </div>
    </div>
</section>

