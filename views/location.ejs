<%- include('layout', { body: `
<!-- Hero Section -->
<section class="huella-hero">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="huella-fade-in">Onde Estamos</h1>
                <p class="lead huella-fade-in">Visite-nos na nossa loja em Lisboa e descubra o sabor dos nossos cookies frescos.</p>
            </div>
            <div class="col-lg-6 text-center">
                <img src="/img/location/store-front.jpg" alt="Loja Huella" class="img-fluid huella-fade-in" style="max-height: 400px;">
            </div>
        </div>
    </div>
</section>

<!-- Address and Contact -->
<section class="huella-section">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="huella-card h-100">
                    <div class="card-body">
                        <h3 class="card-title text-huella-green mb-4">
                            <i class="fas fa-map-marker-alt me-2"></i>Morada
                        </h3>
                        <div class="mb-4">
                            <p class="mb-2">
                                <strong>${address.street}</strong><br>
                                ${address.postalCode} ${address.city}<br>
                                ${address.country}
                            </p>
                        </div>
                        
                        <h5 class="text-huella-orange mb-3">
                            <i class="fas fa-phone me-2"></i>Contactos
                        </h5>
                        <div class="mb-4">
                            <p class="mb-2">
                                <i class="fas fa-phone text-huella-green me-2"></i>
                                <a href="tel:${contact.phone}" class="text-decoration-none">${contact.phone}</a>
                            </p>
                            <p class="mb-2">
                                <i class="fas fa-envelope text-huella-green me-2"></i>
                                <a href="mailto:${contact.email}" class="text-decoration-none">${contact.email}</a>
                            </p>
                        </div>
                        
                        <h5 class="text-huella-orange mb-3">
                            <i class="fas fa-clock me-2"></i>Horários
                        </h5>
                        <div class="mb-4">
                            <p class="mb-1"><strong>Segunda a Sexta:</strong> ${contact.hours.weekdays}</p>
                            <p class="mb-1"><strong>Sábado:</strong> ${contact.hours.saturday}</p>
                            <p class="mb-1"><strong>Domingo:</strong> ${contact.hours.sunday}</p>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-lg-6 mb-4">
                <div class="huella-card h-100">
                    <div class="card-body">
                        <h3 class="card-title text-huella-green mb-4">
                            <i class="fas fa-map me-2"></i>Localização
                        </h3>
                        <div class="map-container" style="height: 300px; border-radius: 10px; overflow: hidden;">
                            <iframe 
                                src="${mapEmbed}" 
                                width="100%" 
                                height="100%" 
                                style="border:0;" 
                                allowfullscreen="" 
                                loading="lazy" 
                                referrerpolicy="no-referrer-when-downgrade">
                            </iframe>
                        </div>
                        <div class="mt-3">
                            <a href="https://maps.google.com/?q=${address.street}, ${address.city}" target="_blank" class="btn btn-huella-primary">
                                <i class="fas fa-directions me-2"></i>Obter Direções
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Nearby Attractions -->
<section class="huella-section huella-section-alt">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="huella-title">O Que Encontrar Perto</h2>
                <p class="huella-text">A nossa localização é perfeita para combinar com outras atividades</p>
            </div>
        </div>
        <div class="row">
            ${nearby.map(place => `
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card huella-card h-100">
                    <div class="card-body">
                        <h5 class="card-title">${place.name}</h5>
                        <p class="text-huella-orange fw-bold mb-2">${place.distance}</p>
                        <p class="card-text">${place.description}</p>
                    </div>
                </div>
            </div>
            `).join('')}
        </div>
    </div>
</section>

<!-- Parking Information -->
<section class="huella-section">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="huella-title">Estacionamento</h2>
                <p class="huella-text">Informações úteis para chegar até nós</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 mx-auto">
                <div class="huella-card">
                    <div class="card-body">
                        <h5 class="card-title text-huella-green mb-4">
                            <i class="fas fa-car me-2"></i>Opções de Estacionamento
                        </h5>
                        <ul class="list-unstyled">
                            ${parking.map(option => `
                            <li class="mb-2">
                                <i class="fas fa-check text-huella-green me-2"></i>
                                ${option}
                            </li>
                            `).join('')}
                        </ul>
                        <div class="alert alert-info mt-3">
                            <i class="fas fa-info-circle me-2"></i>
                            <strong>Dica:</strong> Recomendamos o uso de transportes públicos ou bicicleta para uma experiência mais sustentável!
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Public Transport -->
<section class="huella-section huella-section-green">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="text-white">Transportes Públicos</h2>
                <p class="text-white-50">Como chegar de transportes públicos</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="text-center text-white">
                    <div class="mb-3">
                        <i class="fas fa-subway fa-3x text-huella-yellow"></i>
                    </div>
                    <h5>Metro</h5>
                    <p class="text-white-50">Marquês de Pombal (Linha Azul e Amarela)<br>3 minutos a pé</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="text-center text-white">
                    <div class="mb-3">
                        <i class="fas fa-bus fa-3x text-huella-yellow"></i>
                    </div>
                    <h5>Autocarro</h5>
                    <p class="text-white-50">Paragem Marquês de Pombal<br>Linhas: 706, 720, 738</p>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="text-center text-white">
                    <div class="mb-3">
                        <i class="fas fa-bicycle fa-3x text-huella-yellow"></i>
                    </div>
                    <h5>Bicicleta</h5>
                    <p class="text-white-50">Estação Gira mais próxima<br>Marquês de Pombal</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Store Photos -->
<section class="huella-section huella-section-alt">
    <div class="container">
        <div class="row">
            <div class="col-12 text-center mb-5">
                <h2 class="huella-title">A Nossa Loja</h2>
                <p class="huella-text">Conheça o espaço onde criamos os nossos cookies</p>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card huella-card">
                    <img src="/img/location/store-interior.jpg" class="card-img-top" alt="Interior da Loja">
                    <div class="card-body text-center">
                        <h5 class="card-title">Interior Acolhedor</h5>
                        <p class="card-text">Um ambiente quente e convidativo para provar os nossos cookies</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card huella-card">
                    <img src="/img/location/baking-area.jpg" class="card-img-top" alt="Área de Produção">
                    <div class="card-body text-center">
                        <h5 class="card-title">Área de Produção</h5>
                        <p class="card-text">Veja como preparamos os nossos cookies frescos todos os dias</p>
                    </div>
                </div>
            </div>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card huella-card">
                    <img src="/img/location/display-case.jpg" class="card-img-top" alt="Vitrina">
                    <div class="card-body text-center">
                        <h5 class="card-title">Vitrina de Sabores</h5>
                        <p class="card-text">Todos os nossos sabores disponíveis para provar</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Call to Action -->
<section class="huella-section huella-section-orange">
    <div class="container">
        <div class="row justify-content-center text-center">
            <div class="col-lg-8">
                <h2 class="text-white mb-3">Visite-nos Hoje!</h2>
                <p class="text-white-50 mb-4">Venha conhecer o sabor único dos nossos cookies frescos e a nossa equipa acolhedora.</p>
                <div class="d-flex gap-3 justify-content-center">
                    <a href="https://maps.google.com/?q=${address.street}, ${address.city}" target="_blank" class="btn btn-light btn-lg">
                        <i class="fas fa-directions me-2"></i>Obter Direções
                    </a>
                    <a href="/contactos" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-phone me-2"></i>Ligar Agora
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
` }) %>

