                            <cite title="Source Title">Ana Costa</cite>
                        </footer>
                    </div>
                </div>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-12 text-center">
                <a href="/reviews" class="btn btn-huella-outline">
                    <i class="fas fa-star me-2"></i>Ver Todas as Avaliações
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Newsletter Signup -->
<section class="huella-section huella-section-orange">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6 text-center">
                <h2 class="text-white mb-3">Fique a Par das Novidades</h2>
                <p class="text-white-50 mb-4">Receba ofertas exclusivas e seja o primeiro a saber sobre novos sabores</p>
                <form class="d-flex gap-2">
                    <input type="email" class="form-control" placeholder="O seu email" required>
                    <button class="btn btn-light" type="submit">
                        <i class="fas fa-paper-plane"></i>
                    </button>
                </form>
            </div>
        </div>
    </div>
</section>
` }) %>

